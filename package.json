{
  "name": "react-context-api",
  "version": "1.0.2",
  "description": "react 16.3 context api utils",
  "scripts": {
    "build": "BABEL_ENV=production rollup -c",
    "dev": "BABEL_ENV=development rollup -c -w",
    "pretest": "npm run build",
    "test": "BABEL_ENV=test jest",
    "test:watch": "BABLE_ENV=test jest --watch",
    "test:cov": "BABEL_ENV=test jest --coverage",
    "coverage": "BABEL_ENV=test jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "prepublish": "npm run test && npm run build",
    "precommit": "lint-staged"
  },
  "main": "dist/main.cjs.js",
  "module": "dist/main.esm.js",
  "browser": "dist/main.umd.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/purepennons/react-context-api.git"
  },
  "keywords": [
    "react",
    "context-api"
  ],
  "files": [
    "dist"
  ],
  "author": "Chiahao Lin (@purepennons)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/purepennons/react-context-api/issues"
  },
  "homepage": "https://github.com/purepennons/react-context-api#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.1",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "npm:enzyme-react-adapter-future",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "regenerator-runtime": "^0.11.1",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.1.1",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript2": "^0.15.0",
    "rollup-plugin-url": "^1.4.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2",
    "typings": "^2.1.1"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,jsx,ts,tsx,css,scss}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest.setup.js",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "peerDependencies": {
    "react": ">=16.3",
    "react-dom": ">=16.3"
  },
  "dependencies": {
    "react-adopt": "^0.6.0"
  }
}
